<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sms_africastalking_account_manage_view_form" model="ir.ui.view">
        <field name="name">sms.africastalking.account.manage.view.form</field>
        <field name="model">sms.africastalking.account.manage</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="Africastalking SMS Manage Connection">
                <group string="Credentials">
                    <field name="company_id" invisible="1"/>  <!-- Invisible to not be visible -->
                    <field name="sms_at_shortcode"/>
                    <label for="sms_at_username"/>
                    <div class="d-flex align-items-center">
                        <field name="sms_at_username" placeholder="Africastalking Username"
                            required="1"/>
                        <a target="_blank" class="btn btn-link ms-1 w-25"
                            role="button"
                            href="https://developers.africastalking.com/docs/authentication">
                            Need help ?
                            <i class="fa fa-external-link" aria-hidden="true"/>
                        </a>
                    </div>
                    <field name="sms_at_api_key" password="True" placeholder="abcde12345abcde12345abcde12345ab"
                        required="1"/>
                    <label for="test_number"/>
                    <div class="d-flex align-items-center">
                        <field name="test_number" placeholder="+254xxxxxxxxx"/>
                        <button name="action_send_test" string="Send test SMS"
                            icon="fa-send" type="object"
                            class="btn btn-link w-25 ms-1"/>
                    </div>
                </group>
                <footer>
                    <button string="Update Account" type="object" name="action_save" class="btn-primary" data-hotkey="q"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
